{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* PATH */
    "paths": {
      "@assets": ["./src/assets"],
      "@assets/*": ["./src/assets/*"],
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"],
      "@configs": ["./src/configs"],
      "@configs/*": ["./src/configs/*"],
      "@contracts": ["./src/contracts"],
      "@contracts/*": ["./src/contracts/*"],
      "@hooks": ["./src/hooks"],
      "@hooks/*": ["./src/hooks/*"],
      "@providers": ["./src/providers"],
      "@providers/*": ["./src/providers/*"],
      "@styles": ["./src/styles"],
      "@styles/*": ["./src/styles/*"],
      "@types": ["./src/types"],
      "@types/*": ["./src/types/*"],
      "@utils": ["./src/utils"],
      "@utils/*": ["./src/utils/*"],
      "@states": ["./src/states"],
      "@states/*": ["./src/states/*"],
      "@pages": ["./src/pages"],
      "@pages/*": ["./src/pages/*"],
      "@abi/*": ["./src/abi/*"],
    }
  },
  "include": ["src", "theme.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
